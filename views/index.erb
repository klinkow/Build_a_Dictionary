<h1>Build a Dictionary</h1>
<br>
<h2>Words:</h2>
<br>
<ul>
  <% @words.each() do |the_word| %>
    <li><a href="/definition/<%= the_word.id() %>"><%= the_word.word() %></a></li>
  <% end %>
</ul>
<br>

<form action="/" method="post">
  <input id="new_word" name="new_word" type="text" placeholder="Type Word Here">
  <button type="submit">Add New Word</button>
</form>
